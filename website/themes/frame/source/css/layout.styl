body
  margin 0

.mask-border::before 
  content ''
  width 100%
  height 100vh
  border $line-primary $color-text-primary solid
  position fixed
  top 0
  left 0
  pointer-events none
  z-index 8

.wrapper
  display flex
  flex-direction column
  min-height 100vh

.main 
  flex-grow 1
  padding 0
  margin 0